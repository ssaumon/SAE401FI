openapi: 3.0.3
info:
  title: API de gestion de librairie
  description: |-
    Gestion des clients et des livres disponibles dans la librairie
  contact:
    email: apiteam@iut.io
  version: 0.1.0
servers:
  - url: https://librairie.rt.lan/api/v1
tags:
  - name: SBOMs
    description: Consultation  SBOMs

paths:
  /version/{sbomID}:
    get:
      tags:
        - SBOMs
      summary: Liste des version et des dependances
      parameters:
        - name: sbomID
          in: path
          description: ID du livre à rechercher
          required: true
          schema:
            type: integer
            format: int64
      responses:
        '200':
          description: successful operation
          content:
            application/json:
              schema:
                type: string
            application/xml:
              schema:
                type: string
        '400':
          description: Invalid status value

  /sbom/{sbomID}:
    get:
      tags:
        - SBOMs
      summary: Recherche de SBOM par identifiant

      parameters:
        - name: sbomID
          in: path
          description: ID SBOM a renvoyer
          required: true
          schema:
            type: integer
            format: int64
      responses:
        '200':
          description: successful operation
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/sbom'          
            application/xml:
              schema:
                $ref: '#/components/schemas/sbom'
        '400':
          description: Invalid ID supplied
        '404':
          description: Livre non trouvé

components:
  schemas:
    sbom:
      type: object
      properties:
        id:
          type: integer
          format: int64
          example: 10
        contenu:
          type: string
          example: contenu du fichier sbom
        idUser:
          type: integer
          format: int64
          example: 10
        date:
          type: string
          format: date
          example: 2025-03-21
